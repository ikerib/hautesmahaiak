{% extends 'modalBase.html.twig' %}

{% block title %}Ordezkatu {% endblock %}

{% block body %}
    <div class="relative modal:m-0 modal:p-0  w-full max-h-full">
        <!-- Modal content -->
        <div class="relative p-4 bg-white rounded-lg shadow dark:bg-gray-800 sm:p-5">
            <!-- Modal header -->
            <div class="flex justify-between items-center pb-4 mb-4 rounded-t border-b sm:mb-5 dark:border-gray-600">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Ordezkatu {{ herritarra }}</h3>
            </div>
            <!-- Modal body -->
            <div class="grid gap-4 mb-4">

                {{ form_start(form, {attr: { 'data-turbo-frame': '_top' }}) }}
                    {{ form_row(form.NextHerritarra) }}

                    <div class="hidden">
                        {{ form_row(form.active) }}
                        {{ form_row(form.hauteskundea) }}
                        {{ form_row(form.HerritarraAll) }}
                    </div>
                    <twig:Button type="submit" formnovalidate variant="success" >
                        {{ button_label|default('Ordezkatu') }}
                    </twig:Button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}


{% block stream_success %}
    {{ include('_frameSuccessStreams.html.twig') }}
{% endblock %}
